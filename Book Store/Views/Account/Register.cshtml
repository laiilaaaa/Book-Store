

@{
    ViewData["Title"] = "Register";

}




<div class="modal-square" style="max-width:400px; margin: 50px auto; padding: 30px; border-radius: 15px; box-shadow: 0 0 15px rgba(0,0,0,0.2);">
    <h2 style="text-align:center; margin-bottom: 20px;">Sign Up</h2>

    <form method="post" asp-controller="Account" asp-action="Register">
        <input type="text" name="FullName" placeholder="Full Name" required class="form-input" style="width:100%; padding:10px; margin-bottom:15px; border-radius:5px; border:1px solid #ccc;">
        <input type="email" name="Email" placeholder="Email" required class="form-input" style="width:100%; padding:10px; margin-bottom:15px; border-radius:5px; border:1px solid #ccc;">
        <input type="password" name="Password" placeholder="Password" required class="form-input" style="width:100%; padding:10px; margin-bottom:15px; border-radius:5px; border:1px solid #ccc;">
        <input type="password" name="ConfirmPassword" placeholder="Confirm Password" required class="form-input" style="width:100%; padding:10px; margin-bottom:15px; border-radius:5px; border:1px solid #ccc;">
        <button type="submit" class="btn-login btn-lg" style="width:100%; padding:10px;">Create Account</button>
    </form>

    <div style="text-align:center; margin-top:15px;">
        <p>
            Already have an account?
            <a asp-controller="Account" asp-action="Login" class="btn-register-link">Login</a>
        </p>
    </div>
</div>
