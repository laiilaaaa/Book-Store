
<!-- this file called index.cshtml-->
@using Book_Store.Data
@model List<Book>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 style="font-family: 'Abril Fatface'; font-weight: 200;">🕮 All Available Books:</h1>
        <div class="d-grid" style="width: 200px;">
            <a asp-action="Create" class="btn btn-success btn-lg">
                ✚ Add New Book
            </a>
        </div>
    </div>



    <form method="get" asp-action="Index" class="row g-2 mb-3">
        <div class="col-md-6">
            <input type="text" name="searchString" value="@ViewBag.SearchQuery" placeholder="Search by title or author..." class="form-control" />
        </div>
        <div class="col-md-4">
            <select name="category" class="form-select">
                <option value="">-- All Categories --</option>
                @foreach (var cat in ViewBag.Categories as List<string> ?? new List<string>())
                {
                    <option value="@cat" selected="@(cat == ViewBag.SelectedCategory ? "selected" : null)">
                        @cat
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>




    @if (ViewBag.Message != null)
    {
        <div class="alert alert-custom text-center">
            @ViewBag.Message
        </div>
    }

    @if (TempData["OrderConfirmation"] != null)
    {
        <div class="alert alert-success">
            @TempData["OrderConfirmation"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-custom alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }






    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p><strong>Author:</strong> @book.Author</p>
                        <p><strong>Category:</strong> @book.Category</p>
                        <p><strong>Price:</strong> @book.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm me-2">Details</a>
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-@book.Id">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@foreach (var book in Model)
{
    <div class="modal fade" id="deleteModal-@book.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@book.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel-@book.Id">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>"@book.Title"</strong>?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@book.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}



