@using Book_Store.Data
@model Book

<h2>Book Details</h2>

<div class="card" style="width: 25rem; padding: 15px;">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>ID:</strong> @Model.Id</p>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>

        <form method="post" asp-action="Order" class="mt-3">
            <input type="hidden" name="BookId" value="@Model.Id" />

            <div class="mb-2">
                <label for="UserNumber" class="form-label">Your WhatsApp Number</label>
                <input type="text" name="UserNumber" class="form-control" placeholder="01XXXXXXXXX" required />
            </div>

            <div class="mb-2">
                <label for="Copies" class="form-label">Number of Copies</label>
                <input type="number" name="Copies" class="form-control" min="1" value="1" required />
            </div>

            <button type="submit" class="btn btn-primary">
                🛒 Place Order
            </button>
        </form>
    </div>
</div>

