

<!--this file is called Edit.cshtml-->


@using Book_Store.Data
@model Book
<br /><br />

<h2 style="font-family: 'Abril Fatface', cursive;">Edit Book</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required maxlength="100" pattern="^\S.*" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Author" class="form-label"></label>
        <input asp-for="Author" class="form-control" required maxlength="100" pattern="^\S.*" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" required maxlength="50" pattern="^\S.*" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" required maxlength="500" pattern="^\S.*" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" max="9999.99" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Edit</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
